{
  "version": 2,
  "builds": [
    { "src": "*.{html,css,js}", "use": "@vercel/static" },
    { "src": "server.js", "use": "@vercel/node" },
    { "src": "js/*.js", "use": "@vercel/static" },
    { "src": "css/*.css", "use": "@vercel/static" },
    { "src": "images/*", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    },
    {
      "src": "/js/(.*)",
      "dest": "/js/$1"
    },
    {
      "src": "/css/(.*)",
      "dest": "/css/$1"
    },
    {
      "src": "/images/(.*)",
      "dest": "/images/$1"
    }
  ]
}
